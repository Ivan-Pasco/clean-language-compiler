start()
    // Test basic HTTP functionality
    string url = "https://api.github.com/users/octocat"
    
    // Test basic GET request
    string response = http.get(url)
    print("GET Response:")
    print(response)
    
    // Test POST request  
    string postData = "name=test&value=example"
    string postResponse = http.post(url, postData)
    print("POST Response:")
    print(postResponse)
    
    // Test PUT request
    string putResponse = http.put(url, postData)
    print("PUT Response:")
    print(putResponse)
    
    // Test DELETE request
    string deleteResponse = http.delete(url)
    print("DELETE Response:")
    print(deleteResponse)
    
    // Test JSON POST
    string jsonData = "message=hello"
    string jsonResponse = http.postJson(url, jsonData)
    print("JSON Response:")
    print(jsonResponse)
    
    // Test configuration
    http.setTimeout(5000)
    http.setUserAgent("Clean Language HTTP Client/1.0")
    http.enableCookies(true)
    
    // Test response info
    integer responseCode = http.getResponseCode()
    print("Response Code:")
    print(responseCode)
    
    // Test URL encoding
    string originalUrl = "https://example.com/path with spaces"
    string encodedUrl = http.encodeUrl(originalUrl)
    print("Encoded URL:")
    print(encodedUrl)
    
    string decodedUrl = http.decodeUrl(encodedUrl)
    print("Decoded URL:")
    print(decodedUrl)
    
    print("HTTP test completed!")