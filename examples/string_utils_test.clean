// String Utils Test - Testing StringUtils static methods directly
functions:
    void start()
        print("=== StringUtils Static Methods Test ===")
        
        string text = "Hello"
        string world = " World!"
        
        // Test basic operations using StringUtils static methods
        number len = StringUtils.length(text)
        print("Length of '" + text + "': " + len)
        
        string combined = StringUtils.concat(text, world)
        print("Concatenated: " + combined)
        
        // Test case operations
        string upper = StringUtils.toUpperCase(text)
        print("Uppercase: " + upper)
        
        string lower = StringUtils.toLowerCase(text)
        print("Lowercase: " + lower)
        
        // Test search operations
        boolean hasHello = StringUtils.contains(combined, "Hello")
        print("Contains 'Hello': " + hasHello)
        
        number pos = StringUtils.indexOf(combined, "World")
        print("Position of 'World': " + pos)
        
        // Test validation
        boolean empty = StringUtils.isEmpty("")
        print("Empty string is empty: " + empty)
        
        print("StringUtils test completed!") 