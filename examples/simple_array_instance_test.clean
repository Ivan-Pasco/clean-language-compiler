// Simple Array Instance Methods Test
// Testing the new array.method() syntax

functions:
    void start()
        println("=== Array Instance Methods Test ===")
        
        // Create test array
        numbers = [1, 2, 3, 4, 5]
        println("Original array: [1, 2, 3, 4, 5]")
        
        // Test basic methods
        println("Length: " + numbers.length())
        println("First: " + numbers.first())
        println("Last: " + numbers.last())
        println("Get index 2: " + numbers.get(2))
        
        // Test search methods
        println("Contains 3: " + numbers.contains(3))
        println("Index of 4: " + numbers.indexOf(4))
        
        // Test utility methods
        println("Is empty: " + numbers.isEmpty())
        println("Is not empty: " + numbers.isNotEmpty())
        
        // Test modification methods
        new_array = numbers.push(6)
        println("After push(6): " + Array.join(new_array, ", "))
        
        popped = new_array.pop()
        println("Popped: " + popped)
        
        // Test transformation methods
        reversed = numbers.reverse()
        println("Reversed: " + Array.join(reversed, ", "))
        
        sliced = numbers.slice(1, 4)
        println("Slice(1,4): " + Array.join(sliced, ", "))
        
        // Test string operations
        joined = numbers.join(" - ")
        println("Joined: " + joined)
        
        println("Instance methods work!") 