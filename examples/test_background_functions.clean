// Test background functions

function logMessage(string message) background
	// This function will run in the background
	print("Background log: " + message)

function heavyComputation(integer n) -> integer background
	// Heavy computation that runs in background
	integer result = 0
	iterate i in 1 to n
		result = result + i * i
	return result

function start()
	print("Starting background function tests...")
	
	// Call background functions
	logMessage("System starting up")
	logMessage("Initialization complete")
	
	// Start heavy computation in background
	later computation = start heavyComputation(1000)
	
	print("Background tasks started")
	print("Main thread continues normally")
	
	// Do other work
	integer quickWork = 10 + 20
	print("Quick work result: " + quickWork.toString())
	
	print("Main function completed") 