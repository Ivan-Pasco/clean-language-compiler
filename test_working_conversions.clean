function start()
	// Test method-style type conversion functions that work
	
	// Integer to float conversion (works!)
	integer number = 42
	float numberAsFloat = number.toFloat()
	
	// Float to integer conversion (works!)
	float pi = 3.14
	integer piAsInt = pi.toInteger()
	
	// Boolean conversions (work!)
	integer zero = 0
	boolean zeroAsBool = zero.toBoolean()
	
	integer nonZero = 5
	boolean nonZeroAsBool = nonZero.toBoolean()
	
	float zeroFloat = 0.0
	boolean zeroFloatAsBool = zeroFloat.toBoolean()
	
	float nonZeroFloat = 2.5
	boolean nonZeroFloatAsBool = nonZeroFloat.toBoolean() 