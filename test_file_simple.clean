// Simple test program using new Clean Language specification

function start()
	print "Testing file operations"
	
	string fileName = "test.txt"
	string content = "Hello World"
	
	print "Writing to file..."
	integer writeResult = File.write(fileName, content)
	print "Write result: "
	print writeResult
	
	print "Checking if file exists..."
	integer exists = File.exists(fileName)
	print "File exists: "
	print exists
	
	print "Test completed" 