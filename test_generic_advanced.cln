functions:
	Any max(Any a, Any b)
		if a > b
			return a
		else
			return b
	
	Any operateOnPair(Any a, Any b, Any operation)
		if operation == "add"
			return a + b
		else
			if operation == "multiply"
				return a * b
			else
				return a

	Array<Any> makeArray(Any item1, Any item2)
		Array<Any> result
		result.push(item1)
		result.push(item2)
		return result

